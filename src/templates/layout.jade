!!! 5
html(lang='en')
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(name='viewport', content='width=device-width')
            title
                block title
                    = locals.name
            link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
            script(type='text/javascript', src='//use.typekit.net/obm4ofp.js')
            script(type='text/javascript')
                try{Typekit.load();}catch(e){}
            link(rel='stylesheet', href='/styles/main.css')
        block extrahead

    body(class=bodyclass)
        header
            div.nameplate
                h1
                    a(href=locals.url)= locals.name
                h4.description= locals.description
            nav
                ul
                    li
                        a(href="/code/") Code
                    li
                        a(href="/presentations/") Presentations
                    li
                        a(href='/resume.pdf') Résumé
                    li
                        a(href="http://twitter.com/tylrfishr", target="_blank") Twitter
                    li
                        a(href="http://www.github.com/TylerFisher", target="_blank") GitHub
        block content
        div.border
        footer
            div.content-wrap
                block footer
                    section.about
                        !=contents['about.md'].html
                    section.copy
                        p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
                            a(href='https://github.com/jnordberg/wintersmith', target='_blank') Wintersmith
                            //- please leave the "powered by" if you use the design